@inject IHttpContextAccessor HttpContextAccessor

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AuthUI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav me-auto">
                    <!-- Aligns items to the left -->
                    <li class="nav-item" id="registerLink">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item" id="loginLink">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item" id="protectedLink" style="display:none;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ProtectedData">ProtectedData</a>
                    </li>
                </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ms-auto">
                        <!-- Moves Logout to the right -->
                        <li class="nav-item dropdown" id="dropdownLink" style="display:none; cursor: pointer;">
                            <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span id="userNamePlaceholder" class="text-dark"></span>
                            </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" id="logoutLink">Logout</a>
                        </div>
                    </li>
                </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
